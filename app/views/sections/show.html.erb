<p id="notice"><%= notice %></p>
<div class='container'>
  <div class="card">
    <div class="card-content">
      <spam class="card-title">
        <strong><%= t('.name')%></strong>
        <%= @section.name %>
      </spam>

      <p>
        <strong><%= t('.initials') %></strong>
        <%= @section.initials %>
      </p>

      <p>
        <strong><%= t('.kind') %></strong>
        <%= t("activerecord.attributes.section.kinds.#{@section.kind}") %>
      </p>

      <p>
        <strong><%= t('.status') %></strong>
        <%= t("activerecord.attributes.section.statuses.#{@section.status}") %>
      </p>

      <p>
        <strong><%= t('.observation') %></strong>
        <%= @section.observation %>
      </p>
    </div>
    <div class="card-action">
      <%= link_to t('commands.edit'), edit_section_path(@section) %>
      <%= link_to t('commands.back'), sections_path %>
    </div>
  </div>


    <div class="row">
      <div class="col s12 m12">
        <% @section.branch.each do |branch| %>
        <div class="col s12 m4">
          <div class="card teal darken-1">
            <div class="card teal darken-1">
              <div class='card-content white-text'>
                <div class='card-title'>
                  <%= branch.name %>
                </div>
                <%= branch.number %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
