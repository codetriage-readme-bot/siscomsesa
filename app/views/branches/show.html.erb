<p id="notice"><%= notice %></p>
<div class='container'>
  <div class="card">
    <div class="card-content">
      <spam class="card-title">
        <strong><%= t('.name')%></strong>
        <%= @branch.name %>
      </spam>

      <p>
        <strong><%= t('.number') %></strong>
        <%= @branch.number %>
      </p>

      <p>
        <strong><%= t('.section') %></strong>
        <%= @branch.section.name %>
      </p>

      <p>
        <strong><%= t('.status') %></strong>
        <%= t("activerecord.attributes.branch.statuses.#{@branch.status}") %>
      </p>
    </div>
    <div class="card-action">
      <%= link_to t('commands.edit'), edit_branch_path(@branch) %>
      <%= link_to t('commands.back'), branches_path %>
    </div>
  </div>
</div>
