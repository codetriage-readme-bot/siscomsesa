<p id="notice"><%= notice %></p>

<h3 class='header'><%= t('.index') %></h3>

<table class='striped'>
  <thead>
    <tr>
      <th><%= t('.name') %></th>
      <th><%= t('.initials') %></th>
      <th><%= t('.seniority') %></th>
      <th><%= t('.status') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post_graduations.each do |post_graduation| %>
      <tr>
        <td><%= post_graduation.name %></td>
        <td><%= post_graduation.initials %></td>
        <td><%= post_graduation.seniority %></td>
        <td><%= post_graduation.status %></td>
        <td><%= link_to t('commands.show'), post_graduation %></td>
        <td><%= link_to t('commands.edit'), edit_post_graduation_path(post_graduation) %></td>
        <td><%= link_to t('commands.destroy'), post_graduation, method: :delete, data: { confirm: t('mensages.confirm_destroy') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('commands.new'), new_post_graduation_path %>
