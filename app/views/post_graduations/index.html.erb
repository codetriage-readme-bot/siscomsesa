<p id="notice"><%= notice %></p>

<h3 class='header'><%= t('.index') %></h3>
<table class='striped bordered centered responsive-table'>
  <thead>
    <tr>
      <th><%= t('.name') %></th>
      <th><%= t('.initials') %></th>
      <th><%= t('.status') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post_graduations.order(seniority: :asc).each do |post_graduation| %>
      <tr>
        <td><%= post_graduation.name %></td>
        <td><%= post_graduation.initials %></td>
        <td><%= post_graduation.status %></td>
        <td><%= link_to t('commands.show'), post_graduation, class: 'btn' %></td>
        <td><%= link_to t('commands.edit'), edit_post_graduation_path(post_graduation), class: 'btn' %></td>
        <td><%= link_to t('commands.destroy'), post_graduation, method: :delete,class: 'btn red', data: { confirm: t('mensages.confirm_destroy') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="fixed-action-btn">
  <div class="btn-floating btn-large teal">
    <%= link_to material_icon.add, new_post_graduation_path %>
  </div>
</div>
