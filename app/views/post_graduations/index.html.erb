<p id="notice"><%= notice %></p>

<h1>Post Graduations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Initials</th>
      <th>Seniority</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post_graduations.each do |post_graduation| %>
      <tr>
        <td><%= post_graduation.name %></td>
        <td><%= post_graduation.initials %></td>
        <td><%= post_graduation.seniority %></td>
        <td><%= post_graduation.status %></td>
        <td><%= link_to 'Show', post_graduation %></td>
        <td><%= link_to 'Edit', edit_post_graduation_path(post_graduation) %></td>
        <td><%= link_to 'Destroy', post_graduation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

